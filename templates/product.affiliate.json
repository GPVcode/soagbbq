        "vendor": {
          "type": "text",
          "settings": {
            "text": "{{ product.vendor }}",
            "text_style": "body"
          }
        },
        "title": {
          "type": "title",
          "settings": {
          }
        },
        "rating": {
          "type": "rating",
          "settings": {
          }
        },
        "price": {
          "type": "price",
          "settings": {
          }
        },
        "text_Hg6b7f": {
          "type": "text",
          "settings": {
            "text": "Note: Purchases cannot be made directly on our site. Clicking 'Buy Now' will redirect you to our affiliate partner's website to complete your purchase.",
            "text_style": "uppercase"
          }
        },
        "variant_picker": {
          "type": "variant_picker",
          "disabled": true,
          "settings": {
            "picker_type": "button",
            "swatch_shape": "circle"
          }

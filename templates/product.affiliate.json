        "custom_liquid_zRNTz7": {
          "type": "custom_liquid",
          "settings": {
            "custom_liquid": "{% if product.metafields.custom.affiliate %}\n<a href=\"{{ product.metafields.custom.affiliate }}\" class=\"button custom_url\">Buy Now<\/a>\n{% endif %}"
          }
        },
        "description": {
          "type": "description",
          "settings": {
          }
        },
        "share": {
          "type": "share",
          "settings": {
            "share_label": "Share"
          }
        }
      },
      "block_order": [
        "vendor",
        "title",
        "rating",
        "price",
        "text_Hg6b7f",
        "variant_picker",
        "custom_liquid_zRNTz7",
        "description",
        "share"
      ],
      "settings": {
        "enable_sticky_info": true,
        "color_scheme": "scheme-1",
        "media_size": "large",
        "constrain_to_viewport": true,
        "media_fit": "contain",
        "gallery_layout": "thumbnail_slider",
        "media_position": "left",
        "image_zoom": "lightbox",
        "mobile_thumbnails": "hide",
        "hide_variants": true,
        "enable_video_looping": false,
